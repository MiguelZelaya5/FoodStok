<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        app:layout_constraintBottom_toTopOf="@id/nombreTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/nombreTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Nombre del Artículo"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/categoriaTextView"
        app:layout_constraintEnd_toEndOf="@id/nombreTextView"
        app:layout_constraintStart_toStartOf="@id/nombreTextView"
        app:layout_constraintTop_toBottomOf="@id/nombreTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Categoría"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/fabricacionTextView"
        app:layout_constraintEnd_toEndOf="@id/nombreTextView"
        app:layout_constraintStart_toStartOf="@id/nombreTextView"
        app:layout_constraintTop_toBottomOf="@id/categoriaTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Fecha de Fabricación"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/caducidadTextView"
        app:layout_constraintEnd_toEndOf="@id/nombreTextView"
        app:layout_constraintStart_toStartOf="@id/nombreTextView"
        app:layout_constraintTop_toBottomOf="@id/fabricacionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Fecha de Caducidad"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="122dp" />

    <TextView
        android:id="@+id/cantidadTextView"
        app:layout_constraintEnd_toEndOf="@id/nombreTextView"
        app:layout_constraintStart_toStartOf="@id/nombreTextView"
        app:layout_constraintTop_toBottomOf="@id/caducidadTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Cantidad"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="61dp" />

</androidx.constraintlayout.widget.ConstraintLayout>